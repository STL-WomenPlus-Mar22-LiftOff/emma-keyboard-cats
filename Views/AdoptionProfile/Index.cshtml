    <!-- Health stats -->
    <div class="row">
      <div class="col-sm-8">
        <div class="well well-lg">
          <h3 class="text-center"><strong>HEALTH / STATS?</strong></h3>
          <p>Ex: Vaccinations up to date, gets along with other animals, etc.</p>
          <span class="label label-info">Maybe labels</span>
        </div>
      </div>
      <!-- Button -->
      <div class="col-sm-4">
        <a href="#" class="btn btn-info btn-lg">
          <span class="glyphicon glyphicon-heart-empty"></span> Favorite
        </a>
        <!-- Rescue Info -->
        <div class="well well-sm">
          <h5 class="text-center"><strong>Rescue/Organization</strong></h5>
          <br>
          <span class="glyphicon glyphicon-map-marker"></span>
          <a href="#">Address[Google Maps]</a>
          <br>
          <span class="glyphicon glyphicon-envelope"></span>
