<h1>Results for "@Model.Query":</h1>

@if (Model.Results != null && Model.Results.Any())
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.Results)
            {
                <tr>
                    <td>@result.Name</td>
                    <td>@result.FormattedAddress</td>
                    <td>@result.Rating</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}
